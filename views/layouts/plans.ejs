<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>pluBee | Planos</title>
  <!-- Favicon -->
  <link rel="shortcut icon" href="/img/site/plubee-icon.png" type="image/x-icon">
  <!-- Custom styles -->
  <link rel="stylesheet" href="/css/admin/style.css">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body>
  <div class="layer"></div>
  
  <!-- ! Body -->
  <div class="page-flex">

    <!-- ! Sidebar -->
    <%- include('../partials/sidebar-platform', {isAdmin: isAdmin}) %>

    <div class="main-wrapper">
      <!-- ! Main nav -->
      <%- include('../partials/nav-platform', {isAdmin: isAdmin, title: "Planos da plataforma", notifications: notifications, photo: photo}) %>
  
      <!-- ! Main -->
      <main class="main users chart-page" id="skip-target">
        <div class="container">
          <div class="row" style="margin-top: 2rem">
            <% plans.forEach(item => { %>
              <div class="col-md-6 col-xl-3">
                <article class="stat-cards-item plans">
                  <div>
                    <h2 style="color: #752A7A;"><%= item.title %></h2>
                    <h1 style="color: #752A7A; font-size: 15px; margin: 12px 0 8px 0">Valor mensal: R$<%= item.value_month %></h1>
                  </div>
                  
                  <h4 style="margin: 22px 0px;">Descrição plano:</h4>
                  <div>
                    <% item.description.forEach(description => { %>
                      <p style="color: #686868;"><i class="bi bi-check-lg" style="color: #20bd20; font-size: 22px;"></i><%= description %></p>
                    <% }) %>
                  </div>
                  <div style="margin: 15px 0 6px 0;">
                    <h4 style="margin-bottom: 10px;">Ações</h4>
                    <button class="event">Editar</button>
                    <button class="event">Excluir</button>
                  </div>
                </article>
              </div>
            <% }) %>
          </div>
        </div>
      </main>

      <!-- ! Footer -->
      <%- include('../partials/footer-platform') %>
    </div>
  </div>


<!-- Chart library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Icons library -->
<script src="js/admin/feather.min.js"></script>
</body>
</html>