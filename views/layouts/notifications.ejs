<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>pluBee | Histórico</title>
  <!-- Favicon -->
  <link rel="shortcut icon" href="/img/site/plubee-icon.png" type="image/x-icon">
  <!-- Custom styles -->
  <link rel="stylesheet" href="/css/admin/style.css">
</head>

<body>
  <div class="layer"></div>
  
  <!-- ! Body -->
  <div class="page-flex">

    <!-- ! Sidebar -->
    <%- include('../partials/sidebar-platform', {isAdmin: isAdmin}) %>

    <div class="main-wrapper">
      <!-- ! Main nav -->
      <%- include('../partials/nav-platform', {isAdmin: isAdmin, title: "Notificações", notifications: notifications}) %>
  
      <% if (notifications.length > 0) { %>
      <main class="main users chart-page" id="skip-target">
        <div class="container">
          <div class="row" style="margin-top: 16px">
            <% notifications.forEach(function(item) { %>
              <div class="col-md-6 col-xl-3">
                <article class="stat-cards-item">
                  <div class="stat-cards-icon">
                    <% if (item.type == "post") { %>
                      <img style="height: 39px;" src="/img/admin/post.png" alt="">
                    <% } else if (item.type == "platform") { %>
                      <img style="border-radius: 100%; height: 3.5rem; margin-bottom: 7px;" src="/img/platform/publi-logo-completa.png" alt="">
                    <% } %>
                  </div>
                  <div class="stat-cards-info">
                    <p style="margin-top: 5px; font-weight: bold; color: #752a7a;" class="stat-cards-info__num"><%= item.title %></p>
                    <p class="stat-cards-info__title description-group"><%= item.message %></p>
                  </div>
                </article>
              </div>
            <% }) %>
          </div>
        </div>
      </main>
      <% } else { %>
      <div class="empty">
        <img src="/img/platform/none-notify.png" height="60" alt=""><br>
        <h2 style="color: #752a7a">Nenhuma notificação recebida ainda.</h2>
      </div>
      <% } %>

      <!-- ! Footer -->
      <%- include('../partials/footer-platform') %>
    </div>
  </div>


<!-- Chart library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Icons library -->
<script src="js/admin/feather.min.js"></script>
</body>
</html>