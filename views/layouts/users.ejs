    <%- include('../partials/sidebar-platform', {isAdmin: isAdmin}) %>

    <div class="main-wrapper">
      <!-- !  Main nav -->
      <%- include('../partials/nav-platform', {isAdmin: isAdmin, title: "Usuários cadastrados na plataforma:", notifications: notifications}) %>
  
      <!-- ! Main -->
      <main class="main users chart-page" id="skip-target">
        <div class="container">
          <div class="row">
            <div class="col-lg">
              <div class="users-table table-wrapper">
                <table class="posts-table">
                  <thead>
                    <tr class="users-table-info">
                      <th>Nome</th>
                      <th>Email</th>
                      <th>Number</th>
                      <th>CPF</th>
                      <th>Senha:</th>
                      <th>Tipo de conta</th>
                      <th>Data de cadastro</th>
                      <th>Bloqueado</th>
                      <th>Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% users.forEach(function(item) { %>
                      <tr>
                        <td>
                          <div>
                            <%= item.name %>
                          </div>
                        </td>

                        <td>
                          <div>
                            <%= item.email %>
                          </div>
                        </td>
                        
                        <td>
                          <div>
                            <%= item.number %>
                          </div>
                        </td>

                        <td>
                          <div>
                            <%= item.cpf %>
                          </div>
                        </td>

                        <td>
                          <div>
                            <%= item.password %>
                          </div>
                        </td>

                        <td>
                          <div>
                            <%= item.type_account %>
                          </div>
                        </td>
                        
                        <td>
                          <div>
                            <%= item.date %>
                          </div>
                        </td>

                        <% if (item.isBloqued == false) { %>
                          <td>
                            <div style="font-weight: bold; color: rgb(52, 175, 15);">
                              Não
                            </div>
                          </td>
                        <% } else { %>
                          <td>
                            <div style="font-weight: bold; color: rgb(194, 18, 18);">
                              Sim
                            </div>
                          </td>
                        <% } %>

                        <td>
                          <div>
                            <% if (item.isBloqued == false) { %>
                              <button class="event" onclick="blockUser('<%= item._id %>')">Bloquear</button>
                            <% } else { %>
                              <button class="event" onclick="unlockUser('<%= item._id %>')">Desbloquear</button>
                            <% } %>
                            <button class="event" onclick="deleteUser('<%= item._id %>')">Excluir</button>
                            <a href="/platform/users/<%= item._id %>"><button class="event">Modificar</button></a>
                          </div>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>

