<%- include('../../partials/head', {title: "Help Técnico - Realize o seu login"}) %>

<body style="height: 100vh;">
  <div class="hidden relative z-10 fade-in" id="loading" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-white bg-opacity-75 transition-opacity"></div>

    <div class="flex justify-center items-center fixed inset-0 z-10 overflow-y-auto">
      <div class="mx-auto max-w-xl transform divide-y divide-gray-200 transition-all">
        <div class="loader loader--style6">
          <svg version="1.1" id="loader-1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
            width="50px" height="50px" viewBox="0 0 40 40" enable-background="new 0 0 40 40" xml:space="preserve">
            <path opacity="0.4" fill="#239CFF" d="M20.201,5.169c-8.254,0-14.946,6.692-14.946,14.946c0,8.255,6.692,14.946,14.946,14.946
              s14.946-6.691,14.946-14.946C35.146,11.861,28.455,5.169,20.201,5.169z M20.201,31.749c-6.425,0-11.634-5.208-11.634-11.634
              c0-6.425,5.209-11.634,11.634-11.634c6.425,0,11.633,5.209,11.633,11.634C31.834,26.541,26.626,31.749,20.201,31.749z"/>
            <path fill="#239CFF" d="M26.013,10.047l1.654-2.866c-2.198-1.272-4.743-2.012-7.466-2.012h0v3.312h0 C22.32,8.481,24.301,9.057,26.013,10.047z">
              <animateTransform attributeType="xml"
                attributeName="transform"
                type="rotate"
                from="0 20 20"
                to="360 20 20"
                dur="0.5s"
                repeatCount="indefinite"/>
            </path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="flex h-full">
    <div class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-60">
      <div class="mx-auto w-full max-w-sm lg:w-96">
        <div>
          <img class="h-28 w-auto" src="/img/app/logo.png" alt="Logo Moreira Refrigeração">
          <h2 class="mt-8 text-2xl font-semibold text-blue leading-9 tracking-tight inter">Bem vindo ao Help Técnico!
          </h2>
        </div>

        <div class="mt-10">
          <div class="space-y-6">
            <div>
              <label for="email" class="block inter text-sm font-medium leading-6 text-gray-900">Seu email</label>
              <div class="mt-2">
                <input id="email" name="email" type="email" autocomplete="email" required
                  class="block w-full inter rounded-lg border-2 py-1.5 px-2 placeholder:text-gray-400 sm:text-sm sm:leading-6">
              </div>
            </div>

            <div>
              <label for="password" class="block inter text-sm font-medium leading-6 text-gray-900">Sua senha</label>
              <div class="mt-2">
                <input id="password" name="password" type="password" autocomplete="current-password" required
                  class="block w-full inter rounded-lg border-2 py-1.5 px-2 placeholder:text-gray-400 sm:text-sm sm:leading-6">
              </div>
            </div>

            <div class="flex items-center">
              <div class="text-sm leading-6">
                <a href="#" class="font-semibold text-blue inter">Esqueceu a senha?</a>
              </div>
            </div>

            <div>
              <button onclick="login()"
                class="flex w-full justify-center bg-blue rounded-md px-3 py-2 text-sm font-semibold leading-6 text-white shadow-sm inter">Entrar</button>
            </div>
          </div>

          <div class="mt-10">
            <div class="flex flex-col items-center justify-center">
              <span class="bg-white px-6 text-md text-gray-500 inter font-semibold">Precisa de suporte?</span>
              <span class="bg-white px-6 text-sm text-gray-500 inter font-bold">Ligue: 51 98039-5290</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="relative hidden w-0 flex-1 lg:block">
      <img class="absolute inset-0 h-full w-full object-cover" src="/img/app/photo.png" alt="">
    </div>
  </div>
</body>

<script src="/js/alert-message/alert-message.js"></script>
<script src="/js/auth/index.js"></script>