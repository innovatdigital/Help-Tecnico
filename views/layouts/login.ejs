<script>
const btn = document.querySelector('#btn-login')

function alertMessage(type, content) {
  if (type == 'error') {
    const divMessage = document.querySelector(".error");
    divMessage.style.display = "flex";
    divMessage.innerHTML = "";
    const message = document.createElement("p");
    const img = document.createElement("img");
    img.width = "22"
    img.height = "22"
    img.src = "/img/error.svg"
    message.classList.add("message-notify");
    message.innerText = content;
    divMessage.appendChild(img);
    divMessage.appendChild(message);

    setTimeout(() => {
      divMessage.style = "animation: slideoff 2s;"
      setTimeout(() => {
        divMessage.style = "display: none"
      }, 800)
    }, 3000);
  } else if (type == "success") {
    const divMessage = document.querySelector(".alert");
    divMessage.style.display = "flex";
    divMessage.innerHTML = "";
    const message = document.createElement("p");
    const img = document.createElement("img");
    img.width = "28"
    img.height = "28"
    img.src = "/img/correct.svg"
    message.classList.add("message-notify");
    message.innerText = content;
    divMessage.appendChild(img);
    divMessage.appendChild(message);

    setTimeout(() => {
      divMessage.style = "animation: slideoff 2s;"
      setTimeout(() => {
        divMessage.style = "display: none"
      }, 800)
    }, 3000);
  }
}

btn.addEventListener("click", function() {
  const emailInput = document.querySelector("#email");
  const passwordInput = document.querySelector("#password");
  const email = emailInput.value;
  const password = passwordInput.value;

  if (email.length == 0) { 
    emailInput.style.border = "2px solid red";
    return;
  }

  if (password.length == 0) {
    passwordInput.style.border = "2px solid red";
    return;
  }

  fetch("/login/auth", {
    method: "POST",
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ email: email, password: password })
  })
  .then((response) => {
    if (response.ok) {
      return response.json();
    } else {
      alertMessage("error", "Dados incorretos")
    }
  })
  .then((data) => {
    if (data.token) {
      const now = new Date();
      const expires = new Date(now.getTime() + 1 * 24 * 60 * 60 * 1000);
      document.cookie = `token=${data.token}; expires=${expires.toUTCString()}; path=/`
      
      if (data.roles.includes("ADMIN")) {
        location.href = "/admin/"
      } else if (data.roles.includes("COMPANY")) {
        location.href = "/company/"
      } else if (data.roles.includes("TECHNICIAN")) {
        location.href = "/technician/"
      }
    } else {
      alertMessage("error", "Dados incorretos")
    }
  })
  .catch((error) => {
    console.log(error)
  })
})
</script>