  <section class="planos" id="planos">
    <div class="title-planos">
      <h1>Escolha o plano perfeito para você!</h1>
    </div>

    <div class="flex-planos">
      <% plans.forEach(function(item) { %>
        <% if (item.title == "PRO" || item.title == "Pro" || item.title == "pro") { %>
          <div class="div-big"">
            
            <h2 style="color: #FFFFFF;">Plano <span style="color: #FFFFFF;"><%= item.title %></span></h2>
            <h1 style="color: #FFFFFF;">R$<%= item.value_month %></h1>
            <div>
              <% item.description.forEach(function(item_details) { %>
                <p style="color: #FFFFFF;"><i class="bi bi-check-lg"></i><%= item_details %></p>
              <% }) %>
            </div>
            <a style="border: 3px solid #FFFFFF;" href="/checkout/<%= item._id %>">Adquirir</a>
            <h3>Mais utilizado pelos clientes.</h3>
          </div>
        <% } else { %>
          <div class="div-small">
            
            <h2>Plano <span><%= item.title %></span></h2>
            <h1>R$<%= item.value_month %></h1>
            <div>
              <% item.description.forEach(function(item_details) { %>
                <p><i class="bi bi-check-lg"></i><%= item_details %></p>
              <% }) %>
            </div>
            <a href="/checkout/<%= item._id %>">Adquirir</a>
          </div>
        <% } %>
      <% }) %>

